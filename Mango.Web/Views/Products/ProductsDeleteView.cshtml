    @using Mango.Web.Model;
    @model ProductsDto

<form asp-action="ProductsDeleteView">
        <br />
        <div class="container border p-3">
            <h1 class="text-white text-center">Delete Product</h1>
            <input asp-For="Name" hidden />
            <hr />
            <div class="row">
                <div class="col-2">
                    <!-- Label for Name -->
                    <label class="control-label pt-2" style="font-size:20px;" disapled >Name</label>
                </div>
                <div class="col-10 pb-3">
                    <!-- Input for Name -->
                    <input asp-for="Name" disabled class="form-control"  />
                </div>
                <div class="col-2">
                    <!-- Label for Category Name -->
                    <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                </div>
                <div class="col-10 pb-3">
                    <!-- Input for Category Name -->
                    <input asp-for="CategoryName" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <!-- Label for Description -->
                    <label class="control-label pt-2" style="font-size:20px;">Description</label>
                </div>
                <div class="col-10 pb-3">
                    <!-- Textarea for Description -->
                    <textarea asp-for="Description" disabled class="form-control" rows="5"></textarea>
                </div>
                <div class="col-2">
                    <!-- Label for ImageUrl -->
                    <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                </div>
                <div class="col-10 pb-3">
                    <!-- Input for ImageUrl -->
                     <input asp-for="ImageUrl" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <!-- Label for Price -->
                    <label class="control-label pt-2" style="font-size:20px;">Price</label>
                </div>
                <div class="col-10 pb-3">
                    <!-- Input for Price -->
                    @* <input asp-for="Price" disabled class="form-control" /> *@
                    <img src="@Model.ImageUrl" />
                </div>
                <div class="col-5 offset-2">
                    <!-- Back to List button -->
                    <a asp-controller="Products" asp-action="ProductsIndex" class="btn-primary btn form-control ">Back to List</a>
                </div>
                <div class="col-5">
                    <!-- Delete button -->
                <input asp-action="ProductsDelete" type="submit" value="Delete" class="btn btn-danger form-control" />
                </div>
            </div>
        </div>
    </form>
