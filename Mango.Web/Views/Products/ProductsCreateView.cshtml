    @using Mango.Web.Model;
    @model ProductsDto

<form asp-action="ProductsCreateView">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <!-- Label for Name -->
                <label class="control-label pt-2" style="font-size:20px;" disapled>Name</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Name -->
                <input asp-for="Name"  class="form-control" />
                <span asp-validation-for="Name" ></span>
            </div>
            <div class="col-2">
                <!-- Label for Category Name -->
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Category Name -->
                <input asp-for="CategoryName"  class="form-control" />
<span asp-validation-for="CategoryName" ></span>
            </div>
            <div class="col-2">
                <!-- Label for Description -->
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Textarea for Description -->
                <textarea asp-for="Description"  class="form-control" rows="5"></textarea>
<span asp-validation-for="Description" ></span>
            </div>
            <div class="col-2">
                <!-- Label for ImageUrl -->
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for ImageUrl -->
                <input asp-for="ImageUrl"  class="form-control" />
                    <span asp-validation-for="ImageUrl" ></span>
            </div>
            <div class="col-2">
                <!-- Label for Price -->
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Price -->
                <input asp-for="Price"  class="form-control" />
<span asp-validation-for="Price" ></span>
            </div>
            <div class="col-5 offset-2">
                <!-- Back to List button -->
                <a asp-controller="Products" asp-action="ProductsIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <!-- Create button -->
                <input asp-action="ProductsCreate" type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@*putting the validation scripts for the conditions for the inputs*@
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
                 }

