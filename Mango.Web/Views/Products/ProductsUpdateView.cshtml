    @model ProductsDto
<form asp-action="ProductsUpdateView">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edite Product</h1>
        <input asp-For="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <!-- Label for Name -->
                <label class="control-label pt-2" style="font-size:20px;" disapled>Name</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Name -->
                <input asp-for="Name"  class="form-control"  /> 
            </div>
            <div class="col-2">
                <!-- Label for Category Name -->
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Category Name -->
                <input asp-for="CategoryName"  class="form-control" />
            </div>
            <div class="col-2">
                <!-- Label for Description -->
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Textarea for Description -->
                <textarea asp-for="Description"  class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <!-- Label for ImageUrl -->
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for ImageUrl -->
                <input asp-for="ImageUrl"  class="form-control" />
            </div>
            <div class="col-2">
                <!-- Label for Price -->
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <!-- Input for Price -->
                <input asp-for="Price"  class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <!-- Back to List button -->
                <a asp-controller="Products" asp-action="ProductsIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <!-- Update button -->
               
                <a asp-route-Product="product"></a>
                <input asp-action="ProductsUpdate" type="submit" value="Save" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
