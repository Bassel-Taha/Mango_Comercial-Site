@model LoginRequestDTO
<div class="container-fluid" >
    <h1 class="offset-5">Login</h1>
    <form method="post"> 

        <div>
            <input asp-for="UserName" class="form-control" placeholder="Email" required>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
        <div class="row align-items-center">
            <div class="row-cols-2 align-content-center">
                <input asp-controller="Auth" asp-action="Login" type="submit" value="Login" class="btn btn-success form-control" />
            </div>
            <div class="row-col-2 align-content-center">
                <a asp-controller="Home" asp-action="Index"  class="btn-primary btn form-control ">Back to Home</a>
            </div>
        </div
    </form>
</div>